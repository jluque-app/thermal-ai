{
    "rewrites": [
        {
            "source": "/v1/:match*",
            "destination": "https://thermal-ai.onrender.com/v1/:match*"
        },
        {
            "source": "/analyze",
            "destination": "https://thermal-ai.onrender.com/analyze"
        },
        {
            "source": "/health",
            "destination": "https://thermal-ai.onrender.com/health"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "framework": "vite"
}